# EcoFlow API Settings (Open API: developer.ecoflow.com, docs/SPEC.md)
ECOFLOW_ACCESS_KEY=your_access_key
ECOFLOW_SECRET_KEY=your_secret_key
ECOFLOW_DEVICE_SN=your_device_sn
# Optional: region for host selection. us/api-a (Global), eu/api-e (Europe), default api.ecoflow.com
ECOFLOW_REGION=eu
# Optional override: ECOFLOW_API_HOST=https://api-e.ecoflow.com

# Optional: Cloudflare Worker proxy (fallback when direct API returns 8521/8524)
WORKER_URL=https://example.workers.dev/
WORKER_AUTH_TOKEN=your_worker_bearer_token
# Debug: ECOFLOW_DIRECT_API_ONLY=1 to skip Worker fallback and see raw 8521/8524 errors

# SwitchBot API Settings
SWITCHBOT_TOKEN=your_token
SWITCHBOT_SECRET=your_secret
SWITCHBOT_PLUG_DEVICE_ID=your_device_id

# Notification Settings (docs/ALERTING.md)
# LINE を使わない場合は空または未設定（スキップされる）。Vercel で LINE が DNS ENOTFOUND 等で不通のときは一旦削除してメールのみ運用可。
LINE_NOTIFY_TOKEN=your_line_token
RESEND_API_KEY=re_xxxx
SMTP_FROM=alerts@yourdomain.com
ALERT_EMAIL_TO=admin@example.com

# Security & Auth
CRON_SECRET=generate_a_random_string_for_vercel_cron
APP_PIN_HASH=your_bcrypt_hash_for_manual_off_override
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Database (Vercel Postgres) — Prisma uses POSTGRES_PRISMA_URL; migrations use POSTGRES_URL_NON_POOLING
POSTGRES_URL=postgres://default:xxx@xxx.postgres.vercel-storage.com:5432/verceldb
POSTGRES_PRISMA_URL=postgres://default:xxx@xxx.postgres.vercel-storage.com:5432/verceldb?pgbouncer=true
POSTGRES_URL_NON_POOLING=postgres://default:xxx@xxx.postgres.vercel-storage.com:5432/verceldb

# System Config
SOC_SAFE_MIN=40
SOC_CAUTION_MIN=35
SOC_CRITICAL_MIN=25
SOC_PANIC_MIN=15
POLL_INTERVAL_MIN=2
